<view>
    <fade-box class="mode_fade" showType="{{showModal}}">
        <view bindtap="changeModal" class="modal-show">
            <view catchtap="changeModal" class="icon-close {{iphoneX?'iphoneX':''}} {{isAndroid&&scr=='nml'?'android':''}}" style=""></view>
            <view catchtap="catchModal" class="canvas-wrapper {{iphoneX?'iphoneX':''}} {{isAndroid&&scr=='nml'?'android':''}}">
                <image model="widthFix" src="{{imageUrl}}" style="width:544rpx;height:730rpx;border-radius:10rpx"></image>
            </view>
            <view catchtap="catchModal" class="white-save-wrapper {{iphoneX?'iphoneX':''}} {{isAndroid&&scr=='nml'?'android':''}}">
                <view class="save-text">已保存至相册，记得分享哦</view>
                <text class="save-coupon-text" style="font-size:20rpx;color:#000;line-height: 28rpx;" wx:if="{{getCoupon}}">{{couponMessage}}</text>
            </view>
        </view>
    </fade-box>
    <canvas canvasId="myCanvas2" class="myCanvas2" style="position:fixed;top:100vh;width:100vw;width:544px;height:730px;border-radius:16rpx;"></canvas>
    <view class="bg" style="background: url({{background_url}}) no-repeat center top / 100% auto;">
        <view class="result-page">
            <view>
                <view class="top-header {{iphoneX?'iphoneX':''}}">
                    <view class="top-header-title"></view>
                </view>
                <view class="mid-content {{iphoneX?'iphoneX':''}}">
                    <view class="big-card-show">
                        <image class="card-show-image" mode="widthFix" src="{{image}}"></image>
                        <fade-box showType="{{tipsShow}}">
                            <view class="tips_logo_box">
                                <view class="tips_logo">
                                    <image mode="widthFix" src="/image/logo.svg"></image>
                                </view>
                                <view>
                                    <view class="tips_logo_title">星巴克</view>
                                    <view class="tips_logo_desc">星巴克礼品卡</view>
                                </view>
                            </view>
                        </fade-box>
                    </view>
                    <view bindtap="tipsControl" class="preview">
                        <view class="preview_radio">
                            <view hidden="{{tipsShow}}"></view>
                            <image hidden="{{!tipsShow}}" mode="widthFix" src="/image/right.png"></image>
                        </view>
                        <view class="preview_text">预览卡面在微信卡包内的样式</view>
                    </view>
                </view>
                <view class="star-button-wrapper">
                    <button bindtap="doShareFriend" class="share-friend {{iphoneX?'iphoneX':''}}">赠送好友</button>
                    <button catchtap="savePic" class="save-image-album {{iphoneX?'iphoneX':''}}" wx:if="{{!saved&&!openSettinged}}">保存分享</button>
                    <button bindopensetting="savePic" class="save-image-album {{iphoneX?'iphoneX':''}}" openType="openSetting" wx:if="{{!saved&&openSettinged}}">保存分享</button>
                    <button disabled class="save-image-album saved {{iphoneX?'iphoneX':''}}" wx:if="{{saved}}">已保存</button>
                </view>
            </view>
        </view>
    </view>
</view>
