{
	"pages": [
		//pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				// "navigationBarTitleText": "谣言粉碎机",
				// "enablePullDownRefresh": true
			}
		},{
			"path": "pages/quiz/quiz",
			"style": {
				"navigationBarTitleText": "新冠病毒专项答题",
				"enablePullDownRefresh": false				
			}
		},
		{
			"path" : "pages/detail/detail",
			"style": {
				// "navigationBarTitleText": "详情",
				"app-plus": {
					"titleNView": {
						"type": "transparent"
					}
				}
			}
		}		
	],
	"globalStyle": {
		"mp-alipay": {
			/* 支付宝小程序特有相关 */
			"transparentTitle": "always",
			"allowsBounceVertical": "NO"
		},
		"navigationBarBackgroundColor": "#500200",
		// "navigationBarTitleText": "ColorUi for UniApp",
		"navigationStyle": "custom",
		"navigationBarTextStyle": "white"
	},
	"usingComponts": true,
	"tabBar": {
        "color": "#7A7E83",
        "selectedColor": "#ffffff",
        "borderStyle": "white",
        "backgroundColor": "#540000",
        "height": "60px",
        "fontSize": "20px",
        "iconWidth": "40px",
        "spacing": "3px",
        "list": [{
            "pagePath": "pages/index/index",
            "iconPath": "static/icon/index.png",
            "selectedIconPath": "static/icon/index_selected.png",
            "text": "主页"
        }, {
            "pagePath": "pages/quiz/quiz",
            "iconPath": "static/icon/quiz.png",
            "selectedIconPath": "static/icon/quiz_selected.png",
            "text": "答题"
        }]
    }
}
